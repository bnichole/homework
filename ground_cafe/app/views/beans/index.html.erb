<h1>All of our Coffee Beans</h1>
<div class="row">
<% @beans.each do |bean| %>
  <div class="col-sm-6 col-md-4">
    <div class="thumbnail">
      <img src="<%= bean.image %>">
      <div class="caption">
        <h3><%= bean.blend %></h3>
        <h3>Cost: $<%= bean.cost %></h3>
        <%= link_to "More Info", bean, class: "btn btn-default" %>
      </div>
    </div>
  </div>
  <% end %>
</div>

<br>

<%= link_to 'New Bean', new_bean_path, class: "btn btn-primary" %>